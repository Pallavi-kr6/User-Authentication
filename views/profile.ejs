<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-purple-600 to-blue-500 min-h-screen flex items-center justify-center">
  <div class="bg-white/90 backdrop-blur-md p-10 rounded-2xl shadow-2xl w-full max-w-md">
    <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Update Profile</h2>

   <form action="/profile" method="POST" class="space-y-5">
  <div>
    <label class="block text-gray-700 font-medium mb-2">Full Name</label>
    <input type="text" name="name" value="<%= user.name %>" required
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
  </div>

  <div>
    <label class="block text-gray-700 font-medium mb-2">Email</label>
    <input type="email" name="email" value="<%= user.email %>" required
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
  </div>

  <div>
    <label class="block text-gray-700 font-medium mb-2">Password (leave blank to keep current)</label>
    <input type="password" name="password"
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
  </div>

  <button type="submit"
    class="w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 rounded-lg transition duration-300">
    Update Profile
  </button>
</form>

    <p id="msg" class="mt-4 text-green-600 text-center font-medium"></p>
    <p id="error" class="mt-4 text-red-600 text-center font-medium"></p>
  </div>

  <script>
    const form = document.getElementById("profileForm");
    const msg = document.getElementById("msg");
    const error = document.getElementById("error");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      try {
        const response = await fetch("/profile", {
          method: "PUT",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(data)
        });

        const result = await response.json();
        if (result.error) {
          error.textContent = result.error;
          msg.textContent = "";
        } else {
          msg.textContent = result.msg;
          error.textContent = "";
        }
      } catch (err) {
        error.textContent = "Server error, please try again";
        msg.textContent = "";
      }
    });
  </script>
</body>
</html>
