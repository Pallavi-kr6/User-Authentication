<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Profile - Halloween</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Creepster&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Creepster', cursive;
    }
    .ghost-shadow {
      text-shadow: 0 0 5px #71342e, 0 0 10px #7f1a11, 0 0 20px #83403a;
    }
  </style>
</head>
<body class="bg-gradient-to-br from-black via-gray-800 to-purple-900 min-h-screen flex items-center justify-center">
  <div class="bg-black/70 backdrop-blur-md p-10 rounded-3xl shadow-2xl border-2 border-orange-600 w-full max-w-md">
    <h2 class="text-4xl font-bold text-orange-500 mb-6 text-center ghost-shadow">Update Profile ðŸŽƒ</h2>

    <form id="profileForm" action="/profile" method="POST" class="space-y-5">
      <div>
        <label class="block text-orange-400 font-medium mb-2">Full Name</label>
        <input type="text" name="name" value="<%= user.name %>" required
          class="w-full px-4 py-2 border border-orange-600 bg-black/50 text-orange-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent placeholder-orange-500">
      </div>

      <div>
        <label class="block text-orange-400 font-medium mb-2">Email</label>
        <input type="email" name="email" value="<%= user.email %>" required
          class="w-full px-4 py-2 border border-orange-600 bg-black/50 text-orange-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent placeholder-orange-500">
      </div>

      <div>
        <label class="block text-orange-400 font-medium mb-2">Password (leave blank to keep current)</label>
        <input type="password" name="password"
          class="w-full px-4 py-2 border border-orange-600 bg-black/50 text-orange-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent placeholder-orange-500">
      </div>

      <button type="submit"
        class="w-full bg-orange-600 hover:bg-orange-700 text-black font-bold py-2 rounded-lg transition duration-300 shadow-lg">
        Update Profile
      </button>
    </form>

    <p id="msg" class="mt-4 text-green-400 text-center font-medium"></p>
    <p id="error" class="mt-4 text-red-500 text-center font-medium"></p>
  </div>

  <script>
    const form = document.getElementById("profileForm");
    const msg = document.getElementById("msg");
    const error = document.getElementById("error");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      try {
        const response = await fetch("/profile", {
          method: "PUT",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(data)
        });

        const result = await response.json();
        if (result.error) {
          error.textContent = result.error;
          msg.textContent = "";
        } else {
          msg.textContent = result.msg;
          error.textContent = "";
        }
      } catch (err) {
        error.textContent = "Server error, please try again";
        msg.textContent = "";
      }
    });
  </script>
</body>
</html>
