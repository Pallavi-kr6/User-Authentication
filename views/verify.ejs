<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Verify OTP</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-purple-600 to-blue-500 min-h-screen flex items-center justify-center">
  <div class="bg-white/90 backdrop-blur-md p-10 rounded-2xl shadow-2xl w-full max-w-md">
    <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Verify Email</h2>

    <form action="/verify-otp" method="POST" class="space-y-5">
      <div>
        <label for="email" class="block text-gray-700 font-medium mb-2">Email address</label>
        <input type="email" id="email" name="email" required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
      </div>

      <div>
        <label for="otp" class="block text-gray-700 font-medium mb-2">Enter OTP</label>
        <input type="text" id="otp" name="otp" required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
      </div>

      <button type="submit"
        class="w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 rounded-lg transition duration-300">
        Verify OTP
      </button>
    </form>

    <!-- Resend OTP -->
    <form action="/api/auth/resend-otp" method="POST" class="mt-4 text-center">
      <input type="hidden" name="email" id="resendEmail">
      <button type="submit" class="text-purple-600 hover:underline font-medium">Resend OTP</button>
    </form>

    <script>
      // Copy email from first form into resend form
      const emailInput = document.getElementById('email');
      const resendEmailInput = document.getElementById('resendEmail');
      emailInput.addEventListener('input', () => {
        resendEmailInput.value = emailInput.value;
      });
    </script>
  </div>
</body>
</html>
